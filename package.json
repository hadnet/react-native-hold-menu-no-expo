{
  "name": "@hadnet/react-native-hold-menu-no-expo",
  "version": "0.2.1",
  "description": "A performant, easy to use hold to open context menu for React Native CLI projects powered by Reanimated.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "dotenv release-it",
    "example": "yarn --cwd example",
    "bootstrap": "yarn example && yarn install && yarn example pods",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/hadnet/react-native-hold-menu-no-expo",
  "author": "hadnet <hadnet1@gmail.com> (https://github.com/hadnet)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hadnet/react-native-hold-menu-no-expo/issues"
  },
  "homepage": "https://github.com/hadnet/react-native-hold-menu-no-expo#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.4.8",
    "@react-native-community/blur": "^4.3.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/lodash.isequal": "^4.5.6",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "commitizen": "^4.3.0",
    "commitlint": "^17.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-builder-bob": "^0.20.0",
    "react-native-gesture-handler": "^2.12.1",
    "react-native-haptic-feedback": "^2.0.3",
    "react-native-reanimated": "^3.4.1",
    "react-native-safe-area-context": "^4.7.1",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "@react-native-community/blur": "^4.3.2",
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.8.0",
    "react-native-haptic-feedback": "^2.0.3",
    "react-native-reanimated": ">=2.1.0"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "packageManager": "^yarn@1.22.15",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "useTabs": false,
    "trailingComma": "es5",
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "bracketSpacing": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@gorhom/portal": "^1.0.14",
    "lodash.isequal": "^4.5.0",
    "nanoid": "^4.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
